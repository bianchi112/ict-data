package make.generics;

public class MyGenerics<T> {
	// 배열 처리용 클래스 : 타입이 정해지지 않은 배열 선언
	private T[] array; // 클래스 사용시 타입을 정함
	private int size; // 할당 크기(갯수)
	private int count; // 저장 갯수 카운트용

	public MyGenerics(int size) {
		this.size = size;
		array = (T[])new Object[size];
	}
	
	public void add(T obj) {
		if(count < size) {
			array[count++] = obj;
//			count++;
		}else {
			throw  new SizeOverflowException(size + "개만 저장할 수 있습니다.");
		}
	}
}
