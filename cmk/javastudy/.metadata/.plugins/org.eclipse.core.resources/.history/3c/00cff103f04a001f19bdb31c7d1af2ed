package com.ict.day12;

public class Ex01 {
	private String name;
	private int kor;
	private int eng;
	private int math;
	private int sum;
	private double avg;
	private int rank = 1;

	public Ex01(String name, int kor, int eng, int math) {
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.math = math;

		// 생성자가 다른 메서드를 호출 할 수 있다.
		process();
	}

	public void process() {
		sum = kor + eng + math;
		avg = (int) (sum / 3.0 * 100) / 100.0;
	}

}
