package Workshop4;

import java.util.Scanner;

public class Test05 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("입력 : ");
        int input = sc.nextInt();
        int sum = 0;

        if (input < 1 || input > 5) {
            System.out.println("1~5 사이의 숫자로 입력하세요.");
        } else {
            // 숫자들을 저장할 배열을 크기에 맞게 설정
            int[] numbers = new int[10 - input + 1];
            int count = 0;

            for (int i = input; i <= 10; i++) {
                if (i % 3 != 0 && i % 5 != 0) {
                    numbers[count] = i;
                    sum += i;
                    count++;
                }
            }

            // 숫자들을 문자열로 변환
            String result = "";
            for (int i = 0; i < count; i++) {
                if (i > 0) {
                    result += "+";
                }
                result += numbers[i];
            }

            // 결과 출력
            System.out.println(result);
            System.out.println("결과: " + sum);
        }
    }
}
